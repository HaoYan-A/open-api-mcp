# Example configuration for local OpenAPI testing
# Copy this to .env and update with your actual values

# Local OpenAPI Specification
OPENAPI_SPEC_URL=http://127.0.0.1/v3/api-docs

# Authentication Mode
# For testing without auth, use: none
# For production, use: oauth2, apiKey, bearer, or basic
AUTH_MODE=none

# OAuth 2.0 Configuration (uncomment to use)
# OAUTH_FLOW=clientCredentials
# OAUTH_CLIENT_ID=your-client-id
# OAUTH_CLIENT_SECRET=your-client-secret
# OAUTH_TOKEN_URL=http://127.0.0.1/oauth/token
# OAUTH_SCOPE=read write

# Logging Configuration
LOG_LEVEL=info
LOG_REQUESTS=true
LOG_RESPONSES=true

# Custom Headers (optional, JSON format)
# CUSTOM_HEADERS={"X-Custom-Header":"value"}
