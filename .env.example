# OpenAPI Document Configuration
OPENAPI_SPEC_URL=http://127.0.0.1/v3/api-docs

# Authentication Mode
# Options: apiKey, oauth2, bearer, basic
AUTH_MODE=oauth2

# API Key Authentication (if AUTH_MODE=apiKey)
API_KEY=your-api-key-here
API_KEY_HEADER=Authorization
API_KEY_PREFIX=Bearer

# Bearer Token Authentication (if AUTH_MODE=bearer)
BEARER_TOKEN=your-bearer-token

# Basic Authentication (if AUTH_MODE=basic)
BASIC_AUTH_USER=username
BASIC_AUTH_PASS=password

# OAuth 2.0 Configuration (if AUTH_MODE=oauth2)
# Flow Type: password, clientCredentials, authorizationCode, implicit
OAUTH_FLOW=clientCredentials

# OAuth 2.0 - Client Credentials & Authorization Code
OAUTH_CLIENT_ID=your-client-id
OAUTH_CLIENT_SECRET=your-client-secret

# OAuth 2.0 - Password Flow
OAUTH_USERNAME=user@example.com
OAUTH_PASSWORD=your-password

# OAuth 2.0 - Authorization URLs
OAUTH_TOKEN_URL=https://auth.example.com/oauth/token
OAUTH_AUTH_URL=https://auth.example.com/oauth/authorize
OAUTH_REDIRECT_URI=http://localhost:3000/callback

# OAuth 2.0 - Scopes
OAUTH_SCOPE=read write api.access

# OAuth 2.0 - Authorization Code (manual input after auth)
OAUTH_CODE=

# OAuth 2.0 - Refresh Token (auto-managed)
OAUTH_REFRESH_TOKEN=

# Logging
LOG_LEVEL=info
LOG_REQUESTS=true
LOG_RESPONSES=true

# Custom Headers (JSON format)
# CUSTOM_HEADERS={"X-Custom-Header":"value"}
